<h1>Books</h1>
<% @books.each do |book| %>

  <th>Title</th>
  <th>Body</th>
  <div>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <%= link_to "Show", book_path(book.id) %>
    <%= link_to "Edit", edit_book_path(book.id) %>
    <%= link_to "Delete", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
  </div>
  
<% end %>

<h2>New book</h2>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
      
  <h4>Body</h4>
  <%= f.text_area :body %>
      
  <div><%= f.submit 'Create Book' %></div>
<% end %>